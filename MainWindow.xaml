<Window x:Class="TaskbarAlignmentToggle.MainWindow"
        x:ClassModifier="public"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start Button Position Switcher (win11)" Height="160" Width="320"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,20">
            <TextBlock x:Name="StatusLabel" Text="Current: Checking..." 
                       FontSize="16" HorizontalAlignment="Center"/>
            <TextBlock FontSize="6"/>
            <ToggleButton x:Name="AlignmentToggle" Content="Switch Position" 
                          FontSize="14" Padding="20,10" HorizontalAlignment="Center"
                          Checked="AlignmentToggle_Checked" Unchecked="AlignmentToggle_Unchecked"/>
        </StackPanel>
    </Grid>
</Window>
